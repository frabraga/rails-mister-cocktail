<h1> <%= @cocktail.name %>
<%= link_to "Delete", @cocktail,
      method: :delete,
      data: { confirm: "Are you sure?" } %>
</h1>

<ul>
  <% @doses.each do |d| %>
    <li> <%= d.description %> <%= d.ingredient.name %> <%= link_to "Delete", d,
      method: :delete,
      data: { confirm: "Are you sure?" } %></li>
  <% end %>
</ul>

<%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>

<h1>New dose</h1>

<%= simple_form_for [@cocktail, @dose] do |d| %>
  <%= d.input :description %>
  <%= d.association :ingredient, include_hidden: false %>
  <%= d.button :submit %>
<% end %>





